{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "outDir": "../server-dist",
    "skipLibCheck": true,
    "types": [ "mocha", "chai" ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowJs": true,
    "declaration": true
  },
  "exclude": [
    "src",
    "server-src/tsconfigServer",
    "node_modules",
    "node_modules/@types",
    "node_modules/@types/"
  ]
}
